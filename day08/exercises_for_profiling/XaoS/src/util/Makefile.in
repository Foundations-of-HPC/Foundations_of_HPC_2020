CC     = @CC@
CFLAGS = @CFLAGS@
LIBS   = @LIBS@ -lm
LFLAGS = @LDFLAGS@
AR     = @AR@
RANLIB = @RANLIB@

SRCS = \
       png.c \
       catalog.c \
       thread.c \
       xstring.c \
       help.c \
       xerror.c \
       xshl.c \
       xldio.c \
       xstdio.c \
       xmenu.c \
       timers.c 

OBJS = $(SRCS:.c=.o)

TLIB = ../lib/libutil.a


all:	$(TLIB)

$(TLIB):$(OBJS)
	rm -f $@
	$(AR) rc $@ $(OBJS)
	$(RANLIB) $@ 

clean:
	rm -f $(TLIB)
	rm -f *.[oas]
	rm -f *~
	rm -f core 

distclean:clean
	rm  Makefile

