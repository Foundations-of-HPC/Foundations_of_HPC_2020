CC     = @CC@
CFLAGS = @CFLAGS@
LIBS   = @LIBS@ -lm
LFLAGS = @LDFLAGS@
AR     = @AR@
RANLIB = @RANLIB@

SRCS = image.c \
       palette.c \
       random.c \
       grlib.c \
       font.c \
       filter.c

OBJS = $(SRCS:.c=.o)

TLIB = ../lib/libfilter.a

grlib.o: grlibd.c

all:	$(TLIB)

$(TLIB):$(OBJS)
	rm -f $@
	$(AR) rc $@ $(OBJS)
	$(RANLIB) $@ 

clean:
	rm -f $(TLIB)
	rm -f *.[oas]
	rm -f *~
	rm -f core 

distclean:clean
	rm  Makefile

